                                                i.fas.fa-close(style="color: #ffbba6; margin-left: 5px" onclick=`updateQueryStringParameter('${fieldName}', '')`)
                                            - else
                                                a(style="padding: 5px") #{fieldName}
                                        .sub
                                            ul.row.list-unstyled
                                                - for (let item of aggs[prop][fieldName].buckets)
                                                    li.col-md-4.push-5
