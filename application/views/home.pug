                                                        | #{law['_source'].name}
                                            .row 
                                                .col-md-9
                                                    
                                                    .navbar-group(style='height:35px')
                                                        .navbar-text.mr-4(style=' ')
                                                            a.travel(href='?page=addTrip_Step0' style='font-size:14px')
                                                            i.fas.fa-file-word
                                                            |   Tiếng Anh
                                                        .navbar-text.mr-4
                                                            a.travel(href='?page=addTrip_Step0' style='font-size:14px')
                                                            i.fas.fa-file-word
