                                                            i.fas.fa-project-diagram
                                                            |                                                         Lược đồ
                                                        .navbar-text.mr-4
                                                            a.login(href='' style='font-size:14px')
                                                            i.fas.fa-file-pdf
                                                            |                                                         Bản PDF
                                                        .navbar-text.mr-4
                                                            a.login(href='' style='font-size:14px')
                                                            i.fas.fa-history
                                                            |                                                          Lịch sử
                                                        .navbar-text.mr-4
                                                            a.login(href='' style='font-size:14px')                    
                                                            i.fas.fa-external-link-alt
                                                            |    VB liên quan
                                                                    
