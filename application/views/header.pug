#signUpModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
    .modal-dialog(role='document')
        .register-photo
            .form-container(style='display: table;max-width: 900px;width: 100%;box-shadow: 1px 1px 5px rgba(0,0,0,0.1);')
        
                form(method='post' style='border-bottom-left-radius:5px; border-top-left-radius:5px')
                    h2.text-left Đăng kí tài khoản.
                    .form-group
                        input.form-control(type='text' name='name' placeholder='Họ và tên')
                    .form-group
                        input#example-date-input.form-control(type='date' value='' placeholder='Ngày sinh')
                        .hide Ngày sinh
                            //- i.fas.fa-calendar-alt


                                
                    .form-group
                        input.form-control(type='email' name='email' placeholder='Email')
                    .form-group
                        input.form-control(type='text' name='username' placeholder='Tên đăng nhập')
                    
                    .form-group
                        input.form-control(type='password' name='password' placeholder='Mật khẩu')
                    .form-group
                        input.form-control(type='password' name='password-repeat' placeholder='Nhập lại mật khẩu')
                    .form-group
                        .form-check
                            label.form-check-label
                            input.form-check-input(type='checkbox' style='-webkit-appearance: auto;')
                            |  Tôi đồng ý với 
                            a(href='/termOfUse')
