        section.content
            .row
                .col-xs-12
                    .box
                        .box-header
                            h3.box-title Văn bản pháp lý Việt Nam
                            .box-tools
                                .input-group.input-group-sm.hidden-xs(style='width: 150px;')
                                    input.form-control.pull-right(type='text' name='table_search' placeholder='Search')
                                    .input-group-btn
                                        button.btn.btn-default(type='submit')
                                            i.fa.fa-search
                        .box-header.search-title
                            .form-group.row(style='margin-left:0px;')
                                label.col-form-label(for='inputDocType') CSDL Văn bản
                                .col-sm-3
                                    select#inputState.form-control(style='width:100%')
                                        option(selected='') Tất cả
                                        option Văn bản pháp luật
                                        option Công văn
                                        option Tiêu chuẩn Việt Nam
                                        option Dự thảo văn bản
                            div
                                .form-group.row(style='margin: 0px auto; width: 100%;')
                                    label.col-form-label(for='inputDocType') Lĩnh vực
                                    .col-sm-3
                                        select#inputState.form-control(style='width:100%')
                                            option(selected='') Tất cả
                                            option Vi phạm hành chính
                                            option Quyền dân sự
